{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Armory",
  "theme": "aspen",
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#DC2626",
    "light": "#DC2626",
    "dark": "#DC2626"
  },
  "appearance": {
    "default": "light"
  },
  "topbarCtaButton": {
    "name": "GitHub",
    "url": "https://github.com/thegreataxios/armory"
  },
  "errors": {
    "404": {
      "redirect": false,
      "title": "Page not found",
      "description": "Couldn't find that page. Check the [navigation](/packages/base) or [search](/) for what you're looking for."
    }
  },
  "navigation": {
    "groups": [
      {
        "group": "Overview",
        "pages": ["index", "cli", "changelog"]
      },
      {
        "group": "Accept Payments",
        "pages": [
          "accept-payments/express",
          "accept-payments/hono",
          "accept-payments/next",
          "accept-payments/elysia",
          "accept-payments/bun"
        ]
      },
      {
        "group": "Make Payments",
        "pages": [
          "make-payments/viem",
          "make-payments/ethers",
          "make-payments/web3"
        ]
      },
      {
        "group": "Advanced Guides",
        "pages": [
          "route-configuration",
          "advanced/extension-hooks",
          "advanced/custom-tokens",
          "advanced/custom-networks"
        ]
      },
      {
        "group": "Packages",
        "pages": [
          "packages/base",
          "packages/middleware-bun",
          "packages/middleware-express",
          "packages/middleware-express-v4",
          "packages/middleware-hono",
          "packages/middleware-elysia",
          "packages/middleware-next",
          "packages/client-viem",
          "packages/client-ethers",
          "packages/client-web3",
          "packages/extensions"
        ]
      }
    ]
  }
}
