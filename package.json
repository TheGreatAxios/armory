{
  "name": "armory",
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "author": "Sawyer Cutler <sawyer@dirtroad.dev>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "bun test packages/*/src/**/*.test.ts",
    "test:all": "bun test packages/*/src/**/*.test.ts tests/**/*.test.ts",
    "test:e2e": "bun test tests/e2e/*.test.ts",
    "test:e2e:legacy": "cd tests && bun test e2e.middleware-compat.test",
    "build": "turbo run build",
    "changeset": "changeset",
    "ci:version": "changeset version && bun update",
    "ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag"
  },
  "private": true,
  "version": "",
  "packageManager": "bun@1.3.8",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@faremeter/fetch": "^0.16.0",
    "@faremeter/payment-evm": "^0.16.0",
    "@x402/fetch": "^2.3.0",
    "@x402/evm": "^2.3.1",
    "bun-types": "^1.3.9",
    "elysia": "^1.0.0",
    "express": "^4.21.0",
    "@types/express": "^4.17.21",
    "hono": "^4.0.0",
    "tsup": "^8.5.1",
    "turbo": "^2.8.7",
    "viem": "2.45.0"
  }
}
