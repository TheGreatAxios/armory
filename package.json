{
  "name": "armory",
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "author": "Sawyer Cutler <sawyer@dirtroad.dev>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "bun test packages/*/src/**/*.test.ts",
    "build": "turbo run build",
    "changeset": "changeset",
    "changeset:version": "changeset version && bun update",
    "changeset:publish": "turbo run build && for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag",
    "version-packages": "changeset version && bun update",
    "release": "turbo run build && for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag"
  },
  "private": true,
  "version": "",
  "packageManager": "bun@1.3.8",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "bun-types": "^1.3.9",
    "tsup": "^8.5.1",
    "turbo": "^2.8.7"
  }
}
