{
  "name": "armory",
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "author": "Sawyer Cutler <sawyer@dirtroad.dev>",
  "workspaces": [
    "packages/*",
    "e2e"
  ],
  "scripts": {
    "prepare": "husky",
    "test": "turbo run test",
    "test:e2e": "bun test e2e/**/*.test.ts",
    "test:pay": "bun e2e/payments/live-payment-test.ts",
    "build": "turbo run build",
    "changeset": "changeset",
    "ci:version": "changeset version && bun update",
    "ci:publish": "npm publish --provenance --access public --workspaces && changeset tag",
    "ci:publish:beta": "npm publish --provenance --access public --tag beta --workspaces && changeset tag",
    "ci:publish:alpha": "npm publish --provenance --access public --tag alpha --workspaces",
    "ci:release": "bun run ci:version && bun run ci:publish",
    "ci:release:beta": "bun run ci:version && bun run ci:publish:beta",
    "ci:release:alpha": "bun run ci:version && bun run ci:publish:alpha"
  },
  "private": true,
  "packageManager": "bun@1.3.8",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "bun-types": "^1.3.9",
    "husky": "^9.1.7",
    "tsup": "^8.5.1",
    "turbo": "^2.8.9"
  },
  "version": "0.0.1"
}
