{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "paths": {
      "@armory-sh/base": ["./packages/base/src"],
      "@armory-sh/cli": ["./packages/cli/src"],
      "@armory-sh/client-ethers": ["./packages/client-ethers/src"],
      "@armory-sh/client-viem": ["./packages/client-viem/src"],
      "@armory-sh/client-web3": ["./packages/client-web3/src"],
      "@armory-sh/extensions": ["./packages/extensions/src"],
      "@armory-sh/middleware": ["./packages/middleware/src"],
      "@armory-sh/middleware-bun": ["./packages/middleware-bun/src"],
      "@armory-sh/middleware-elysia": ["./packages/middleware-elysia/src"],
      "@armory-sh/middleware-express": ["./packages/middleware-express/src"],
      "@armory-sh/middleware-express-v4": ["./packages/middleware-express-v4/src"],
      "@armory-sh/middleware-hono": ["./packages/middleware-hono/src"],
      "@armory-sh/tokens": ["./packages/tokens/src"]
    },
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["tests/**/*.ts", "packages/**/*.ts"]
}
